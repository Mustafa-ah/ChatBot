<?xml version="1.0" encoding="utf-8"?>
<prism:PrismApplication xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:prism="clr-namespace:Prism.Unity;assembly=Prism.Unity.Forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="STC.App">
    <Application.Resources>
        <ResourceDictionary>
            <!--Global Styles-->
            <Color x:Key="NavigationPrimary">#2196F3</Color>
            <Color x:Key="DimmedBackgroundColor">#80000000</Color>
            <Color x:Key="LoadingLabelColor">#FF394C</Color>
            <Color x:Key="LoadingSpinnerColor">#FF394C</Color>
            <Color x:Key="LinkColor">#0070C0</Color>
            <Color x:Key="SpinnerBackgroundColor">#D0000000</Color>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource NavigationPrimary}" />
                <Setter Property="BarTextColor" Value="White" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>