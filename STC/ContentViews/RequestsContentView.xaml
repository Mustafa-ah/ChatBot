                    FontSize="18"
                    HeightRequest="60"
                    Text="{x:Static rs:AppResources.NewRequest}"
                    TextColor="#5D0095" />
                <Button
                    Grid.Row="4"
                    BackgroundColor="Transparent"
                    BorderColor="Gray"
                    BorderWidth="2"
                    Command="{Binding OpenRequestsListCommand}"
                    FontFamily="STCForwardMedium"
                    FontSize="16"
                    HeightRequest="60"
                    Text="{x:Static rs:AppResources.SeeYourRequests}"
                    TextColor="#FF375E" />-->
