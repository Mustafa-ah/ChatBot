<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="STC.ContentViews.RequestsContentView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:rs="clr-namespace:STC.Resources">
    <ContentView.Content Margin="20">
       <Grid x:Name="RootGrid" RowDefinitions="40,30,*,56,56" RowSpacing="20">
                <Label
                    Grid.Row="0"
                    FontAttributes="Bold"
                    FontSize="28"
                    Text="{x:Static rs:AppResources.Requests}"
                    TextColor="White" />
                <Label
                    Grid.Row="1"
                    FontFamily="STCForwardRegular"
                    FontSize="18"
                    Text="{x:Static rs:AppResources.RequestsTabQuote}"
                    TextColor="White" />
                <Image Grid.Row="2" Source="RequestsTab.png" />

